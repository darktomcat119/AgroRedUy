# Environment
NODE_ENV=development
PORT=3001
HOST=localhost

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/agrored_db"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/agrored_test_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-secret-key-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="30d"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@agrored.uy"
FRONTEND_URL="http://localhost:3000"

# Email Verification (set to false to skip email verification)
EMAIL_VERIFICATION_ENABLED=false

# OAuth Providers
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/api/v1/oauth/google/callback"

# Facebook OAuth
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
FACEBOOK_CALLBACK_URL="http://localhost:3001/api/v1/oauth/facebook/callback"

# Apple OAuth
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_KEY_ID="your-apple-key-id"
APPLE_PRIVATE_KEY="your-apple-private-key"
APPLE_CALLBACK_URL="http://localhost:3001/api/v1/oauth/apple/callback"

# Session
SESSION_SECRET="your-session-secret-key-change-this-in-production"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
ALLOWED_DOCUMENT_TYPES="application/pdf,application/msword"

# CORS
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5
RATE_LIMIT_ADMIN_MAX_REQUESTS=500

# Encryption
ENCRYPTION_KEY="your-encryption-key-change-this-in-production"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# File Storage Configuration
# STORAGE_TYPE: 'local' for local filesystem, 's3' for Cloudflare R2 or AWS S3
STORAGE_TYPE="local"

# Cloudflare R2 Configuration (Required if STORAGE_TYPE=s3)
# Get these from your R2 dashboard: Settings > API Tokens
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="agrored-uploads"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"

# Optional: Custom domain for public access (highly recommended)
# If not set, you MUST enable "Public Access" in R2 dashboard and use the r2.dev URL
# Example: https://pub-xxxxx.r2.dev or your custom domain
R2_PUBLIC_URL="https://cdn.agrored.uy"

# Alternative: AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="agrored-images"

# Seed Configuration (Optional - for database seeding)
# These values are used when running npm run db:seed
# If not set, defaults will be used
SUPERADMIN_EMAIL="admin@agrored.uy"
SUPERADMIN_PASSWORD="admin123"
SUPERADMIN_FIRST_NAME="Super"
SUPERADMIN_LAST_NAME="Admin"
SUPERADMIN_PHONE="+59899123456"
