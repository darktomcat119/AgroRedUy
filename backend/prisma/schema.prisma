generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String           @id @default(uuid())
  email                    String           @unique
  passwordHash             String?          @map("password_hash")
  firstName                String           @map("first_name")
  lastName                 String           @map("last_name")
  phone                    String?
  role                     UserRole         @default(USER)
  isActive                 Boolean          @default(true) @map("is_active")
  emailVerified            Boolean          @default(false) @map("email_verified")
  profileImageUrl          String?          @map("profile_image_url")
  provider                 String?
  providerId               String?          @map("provider_id")
  providerData             Json?            @map("provider_data")
  address                  String?
  city                     String?
  department               String?
  dateOfBirth              DateTime?        @map("date_of_birth")
  gender                   String?
  occupation               String?
  company                  String?
  interests                Json?
  newsletter               Boolean          @default(false)
  emailVerificationToken   String?          @map("email_verification_token")
  emailVerificationExpires DateTime?        @map("email_verification_expires")
  createdAt                DateTime         @default(now()) @map("created_at")
  updatedAt                DateTime         @updatedAt @map("updated_at")
  lastLoginAt              DateTime?        @map("last_login_at")
  sentMessages             BookingMessage[] @relation("MessageSender")
  bookings                 Booking[]
  reviews                  Review[]
  services                 Service[]
  scheduleRequests         ScheduleRequest[] @relation("ScheduleRequestUser")
  notifications            Notification[]

  @@map("users")
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  iconUrl     String?   @map("icon_url")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  services    Service[]

  @@map("categories")
}

model Service {
  id           String         @id @default(uuid())
  userId       String         @map("user_id")
  categoryId   String         @map("category_id")
  unit_id      String
  title        String
  description  String
  price        Decimal
  priceMin     Decimal?       @map("price_min")
  priceMax     Decimal?       @map("price_max")
  priceCurrency String        @default("UYU") @map("price_currency")
  latitude     Decimal
  longitude    Decimal
  mapZoom      Int            @default(6) @map("map_zoom")
  radius       Int?           @map("radius") // Service radius in kilometers
  address      String
  city         String
  department   String
  isActive     Boolean        @default(true) @map("is_active")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
  availability Availability[]
  bookings     Booking[]
  reviews      Review[]
  images       ServiceImage[]
  subBadges    ServiceSubBadge[]
  scheduleRequests ScheduleRequest[] @relation("ScheduleRequestService")
  category     Category       @relation(fields: [categoryId], references: [id])
  units        units          @relation(fields: [unit_id], references: [id])
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("services")
}

model ServiceImage {
  id        String   @id @default(uuid())
  serviceId String   @map("service_id")
  imageUrl  String   @map("image_url")
  sortOrder Int      @default(0) @map("sort_order")
  isPrimary Boolean  @default(false) @map("is_primary")
  createdAt DateTime @default(now()) @map("created_at")
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@map("service_images")
}

model ServiceSubBadge {
  id        String   @id @default(uuid())
  serviceId String   @map("service_id")
  name      String
  iconUrl   String?  @map("icon_url")
  sortOrder Int      @default(0) @map("sort_order")
  createdAt DateTime @default(now()) @map("created_at")
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@map("service_sub_badges")
}

model Availability {
  id          String    @id @default(uuid())
  serviceId   String    @map("service_id")
  date        DateTime  @db.Date
  startTime   String    @map("start_time")
  endTime     String    @map("end_time")
  isAvailable Boolean   @default(true) @map("is_available")
  isBooked    Boolean   @default(false) @map("is_booked")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  service     Service   @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  bookings    Booking[]

  @@unique([serviceId, date, startTime, endTime])
  @@map("availability")
}

model Booking {
  id             String           @id @default(uuid())
  serviceId      String           @map("service_id")
  userId         String           @map("user_id")
  availabilityId String           @map("availability_id")
  status         BookingStatus    @default(PENDING)
  totalPrice     Decimal          @map("total_price")
  durationHours  Int              @map("duration_hours")
  notes          String?
  contactName    String           @map("contact_name")
  contactEmail   String           @map("contact_email")
  contactPhone   String           @map("contact_phone")
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")
  confirmedAt    DateTime?        @map("confirmed_at")
  cancelledAt    DateTime?        @map("cancelled_at")
  messages       BookingMessage[]
  availability   Availability     @relation(fields: [availabilityId], references: [id], onDelete: Cascade)
  service        Service          @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  review         Review?

  @@map("bookings")
}

model Review {
  id        String   @id @default(uuid())
  serviceId String   @map("service_id")
  userId    String   @map("user_id")
  bookingId String   @unique @map("booking_id")
  rating    Int
  comment   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model BookingMessage {
  id        String   @id @default(uuid())
  bookingId String   @map("booking_id")
  senderId  String   @map("sender_id")
  message   String
  createdAt DateTime @default(now()) @map("created_at")
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  sender    User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@map("booking_messages")
}

model FaqContent {
  id        String   @id @default(uuid())
  question  String
  answer    String
  sortOrder Int      @default(0) @map("sort_order")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("faq_content")
}

model TermsContent {
  id        String   @id @default(uuid())
  title     String
  content   String
  version   String
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("terms_content")
}

model PrivacyContent {
  id        String   @id @default(uuid())
  title     String
  content   String
  version   String
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("privacy_content")
}

model ContactInfo {
  id          String   @id @default(uuid())
  title       String
  content     String
  contactType String   @map("contact_type")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("contact_info")
}

model units {
  id          String    @id
  name        String    @unique
  symbol      String    @unique
  description String?
  is_active   Boolean   @default(true)
  created_at  DateTime  @default(now())
  updated_at  DateTime
  services    Service[]
}

enum UserRole {
  USER
  CONTRACTOR
  ADMIN
  SUPERADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum ScheduleRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

enum NotificationType {
  SCHEDULE_REQUEST
  SCHEDULE_ACCEPTED
  SCHEDULE_REJECTED
  BOOKING_CONFIRMED
  BOOKING_CANCELLED
  GENERAL
}

model ScheduleRequest {
  id            String                @id @default(uuid())
  serviceId     String                 @map("service_id")
  userId        String                 @map("user_id")
  startDate     DateTime               @db.Date @map("start_date")
  endDate       DateTime               @db.Date @map("end_date")
  status        ScheduleRequestStatus  @default(PENDING)
  message       String?
  createdAt     DateTime               @default(now()) @map("created_at")
  updatedAt     DateTime               @updatedAt @map("updated_at")
  respondedAt  DateTime?              @map("responded_at")
  service       Service                @relation("ScheduleRequestService", fields: [serviceId], references: [id], onDelete: Cascade)
  user          User                   @relation("ScheduleRequestUser", fields: [userId], references: [id], onDelete: Cascade)

  @@map("schedule_requests")
}

model Notification {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  type      NotificationType
  title     String
  message   String
  relatedId String?          @map("related_id") // ID of related entity (schedule request, booking, etc.)
  serviceId String?          @map("service_id") // Service ID for navigation to service page
  isRead    Boolean          @default(false) @map("is_read")
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}
